@model IEnumerable<StoreApp.Models.Supplier>
@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/ProductsLayout.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="~/js/searchBySupplier.js"></script>
<script src="~/js/searchByType.js"></script>
<script src="~/js/searchByUser.js"></script>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.3.3/dist/semantic.min.css">
<script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.3.3/dist/semantic.min.js"></script>





<aside>
    <br />
    <br />
    <br />

    <div class="container" >
        <div class="row">
            <div class="col-sm">
                <label class="mr-sm-2" for="product inlineFormCustomSelect">סוג המוצר:</label>
                <select id="product" class="custom-select mb-2 mr-sm-2 mb-sm-0" style="width: 80px; height: 30px">
                    <option value="meat">Meat</option>
                    <option value="milk">Milky</option>
                    <option value="general">General</option>
                    <option value="vegetable">Vegterbale</option>
                </select>



                <br />
                <br />
                <label for="min">מחיר מינימלי:</label>
                <input type="number" id="min" placeholder="מחיר מינימלי" value="" />
                <br />
                <br />
                <label for="max">מחיר מקסימלי:</label>
                <input type="number" id="max" placeholder="מחיר מקסימלי" value="" />
                <br />
                <br />
                <center>
                    <button type="submit" id="btn-search" class="btn btn-primary" style="width:60px; height:30px; padding-bottom:10px ; font-size:15px" data-toggle="button" aria-pressed="false" autocomplete="off">
                        חפש
                    </button>
                </center>
                <input type="hidden" id="len" value="0" />
            </div>
            <div class="col-sm">
                <label for="product">סוג המוצר:</label>
                <select id="product2">
                    <option value="meat">Meat</option>
                    <option value="milk">Milky</option>
                    <option value="general">General</option>
                    <option value="vegetable">Vegterbale</option>
                </select>
                <br />
                <br />
                <label for="supplier">שם ספק:</label>

                <select class="mdb-select colorful-select dropdown-primary" id="supplier">
                    @foreach (var item in Model)
        {
            <option value="@item.CompanyName">@item.CompanyName</option>

}
                </select>
                <br />
                <input type="hidden" id="len" value="0" />
                <center>
                <button type="submit" id="btn-search3" class="btn btn-primary" style="width:60px; height:30px; padding-bottom:10px ; font-size:15px" data-toggle="button" aria-pressed="false" autocomplete="off">
                    חפש
                </button>
                </center>
                <br />
                <br />

                <br />


            </div>
            <div class="col-sm">
                <div class="ui search" style="margin-bottom: 20px">
                    <input class="prompt" type="text" placeholder="הזן שם מוצר">

                    <input type="hidden" id="len" value="0" />
                    <center>
                    <br />
                    <div class="results"></div>
                    <button type="submit" id="btn-search2" class="btn btn-primary" style="width:60px; height:30px; padding-bottom:10px ; font-size:15px" data-toggle="button" aria-pressed="false" autocomplete="off">
                        חפש
                    </button>
                    </center>
                </div>
            </div>
        </div>
    </div>

    <div>

    </div>
</aside>
