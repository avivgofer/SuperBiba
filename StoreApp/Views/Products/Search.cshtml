@model IEnumerable<StoreApp.Models.Supplier>
@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/ProductsLayout.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="~/js/searchBySupplier.js"></script>
<script src="~/js/searchByType.js"></script>
<aside>
    <div>
        <label for="product">סוג המוצר:</label>
        <select id="product">
            <option value="Meat">Meat</option>
            <option value="milky">Milky</option>
            <option value="general">General</option>
            <option value="drinks">Drinks</option>
            <option value="snacks">Snacks</option>
            <option value="Vegetable">Vegterbale</option>
        </select>
      
        <br />
        <br />
        <label for="min">מחיר מינימלי:</label>
        <input type="number" id="min" placeholder="מחיר מינימלי" value="" />
        <br />
        <br />
        <label for="max">מחיר מקסימלי:</label>
        <input type="number" id="max" placeholder="מחיר מקסימלי" value="" />
        <br />
        <br />
        <input type="submit" id="btn-search" value="חפש" />
        <input type="hidden" id="len" value="0" />
    </div>
</aside>
<center>
    <div>
        <label for="product">סוג המוצר:</label>
        <select id="product2">
            <option value="Meat">Meat</option>
            <option value="Milky">Milky</option>
            <option value="general">General</option>
            <option value="drinks">Drinks</option>
            <option value="snacks">Snacks</option>
            <option value="Vegetable">Vegterbale</option>
        </select>
        <br />
        <br />
        <label for="supplier">שם ספק:</label>
        <select id="supplier">
            @foreach (var item in Model)
            {
                <option value="@item.CompanyName">@item.CompanyName</option>

            }
        </select>
        <br />
        <br />
        <label for="name">שם המוצר:</label>
        <input type="text" id="name" placeholder="שם המוצר" value="" />
        <br />
        <input type="submit" id="btn-search2" value="חפש" />
        <input type="hidden" id="len" value="0" />
    </div>
</center>
<div class="card">
    <table class="table table-hover shopping-cart-wrap" id="productable">
        <thead class="text-muted">
            <tr id="col-1">
                <th scope="col">Product Name</th>
                <th scope="col">Product Type</th>
                <th scope="col">Price</th>
                <th scope="col">Supplier</th>
            </tr>
        </thead>
    </table>
</div>